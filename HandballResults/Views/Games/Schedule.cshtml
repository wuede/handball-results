@model HandballResults.Models.GamesViewModel

@{
    ViewBag.Title = "Spielplan";
}

<div id="schedule-container">

    <h2>Spielplan</h2>
    <div class="wide">
        <table>
            <thead>
            <tr>
                <td>Datum</td>
                <td>Liga</td>
                <td>Heim</td>
                <td>Gast</td>
                <td>Halle</td>
                <td>&nbsp;</td>
            </tr>
            </thead>
            <tbody>
            @{
                if (Model.Games != null)
                {
                    foreach (var game in Model.Games)
                    {
                        <tr class="link hidden" data-link-target="https://www.handball.ch/de/matchcenter/spiele/@game.GameId">
                            <td>@game.GameDateTime.ToString("ddd dd.MMM HH:mm")</td>
                            <td>@game.LeagueLong</td>
                            <td>@game.TeamAName</td>
                            <td>@game.TeamBName</td>
                            <td>@game.Venue</td>
                            <td>&gt;</td>
                        </tr>
                    }
                }
            }
            </tbody>
        </table>
    </div>

    <ul class="narrow games">
        @{
            if (Model.Games != null)
            {
                foreach (var game in Model.Games)
                {
                    <li class="link hidden" data-link-target="https://www.handball.ch/de/matchcenter/spiele/@game.GameId">
                        <div class="col">
                            <div class="info">@game.GameDateTime.ToString("ddd dd.MMM HH:mm") | @game.Venue</div>
                            <div>@game.TeamAName : @game.TeamBName</div>
                            <div>@game.LeagueLong</div>
                        </div>
                        <div class="col">
                            >
                        </div>
                    </li>
                }
            }
        }
    </ul>

    <p><a id="schedule-visibility-switch" href="#schedule" data-alternative-text="weniger anzeigen">alle anzeigen</a></p>
</div>

<script src="~/dist/schedule.entry.js" defer></script>